<h3>Spec</h3>
<form action="/assessments" method="post" accept-charset="utf-8">
	<label for="title">Title</label>
	<input type="text" name="assessment[title]" value="" id="title">
	<br />
	
	<label for="time_limit">Time Limit</label>
	<input type="text" name="assessment[time_limit]" value="" id="time_limit" placeholder="mins">
	<br />
	
	<label for="language">Language</label>
	<select name="assessment[language]" id="language">
		<option>ruby</option>
	</select>
	<br />
	
	<label for="difficulty">Difficulty</label>
	<input type="text" name="assessment[difficulty]" value="" id="difficulty" placeholder="1 (easy) - 5 (hard)">
	<br />
	
	<label for="instructions">Instructions</label>
	<textarea name="assessment[instructions]" id="instructions" rows="10" cols="60"></textarea>
	<br />
	
	<label for="spec_editor">Specs</label>
	<div id="spec_editor" class="editor"></div>
	<br />
	
	<label for="skeleton_editor">Skeleton</label>
	<div id="skeleton_editor" class="editor"></div>
	<br />
	
	<p><input type="submit" value="Submit Assessment"></p>
</form>

<script type="text/javascript" charset="utf-8">
  var skeleton_editor = ace.edit("skeleton_editor");
  skeleton_editor.setTheme("ace/theme/monokai");
  skeleton_editor.getSession().setMode("ace/mode/ruby");
	
	var spec_editor = ace.edit("spec_editor");
	spec_editor.setTheme("ace/theme/monokai");
	spec_editor.getSession().setMode("ace/mode/ruby");
</script>