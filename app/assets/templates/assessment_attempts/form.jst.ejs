<h3>Solution</h3>
<form action="" method="post">
	<label for="title">Title</label>
	<input type="text" name="assessment_attempt[title]" value="" id="title" />
	<br />
	<label for="solution">Solution</label>
	<div id="solution_editor" class="editor"><%= assessment_attempt.get("solution") %></div>
	<script type="text/javascript" charset="utf-8">
	  var editor = ace.edit("solution_editor");
	  editor.setTheme("ace/theme/monokai");
	  editor.getSession().setMode("ace/mode/ruby");
	</script>
	<br />
	
	<p><input type="submit" value="Run Tests" class="btn btn-primary"></p>
</form>
