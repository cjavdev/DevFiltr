<form action="<%= new_assessment_attempt_url(@assessment) %>" method="post">
	<label for="title">title</label>
	<input type="text" name="assessment_attempt[title]" value="" id="title" />
	<br />
	<label for="solution">solution</label>
	<textarea name="assessment_attempt[solution]" id="solution"></textarea>
	<br />
	
	
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" id="authenticity_token">
	<p><input type="submit" value="Continue &rarr;"></p>
</form>